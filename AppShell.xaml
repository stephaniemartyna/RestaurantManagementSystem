<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RestaurantManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RestaurantManagementSystem">

    <TabBar x:Name="TabBar">
        <ShellContent
            x:Name="LoginPage "
            Title="Login"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="Login" />
        <ShellContent
            x:Name="TablePage"
            Title="Table"
            ContentTemplate="{DataTemplate local:TablePage}"
            Route="Table" />
        <ShellContent
            x:Name="MenuPage"
            Title="Menu"
            ContentTemplate="{DataTemplate local:MenuPage}"
            Route="Menu" />
        <ShellContent
            x:Name="SalesPage"  
            Title="Sales"
            ContentTemplate="{DataTemplate local:SalesPage}"
            Route="Sales" />
    </TabBar>
</Shell>
